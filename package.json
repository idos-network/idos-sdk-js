{
  "name": "idos-sdk-js",
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "lefthook": "1.11.16",
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@10.12.4",
  "pnpm": {
    "overrides": {
      "web-streams-polyfill": "3.3.3",
      "near-api-js>bn.js": "4.12.2",
      "@near-wallet-selector/core>bn.js": "4.12.2",
      "@near-wallet-selector/here-wallet>bn.js": "4.12.2",
      "@near-wallet-selector/modal-ui>bn.js": "4.12.2",
      "@near-wallet-selector/meteor-wallet>bn.js": "4.12.2",
      "@meteorwallet/sdk>bn.js": "4.12.2",
      "@partisiablockchain/abi-client>bn.js": "5.2.2",
      "@partisiablockchain/blockchain-api-transaction-client>bn.js": "5.2.2"
    },
    "patchedDependencies": {
      "@kwilteam/kwil-js@0.9.4": "patches/@kwilteam__kwil-js@0.9.4.patch",
      "react-router@7.6.3": "patches/react-router@7.6.3.patch"
    },
    "onlyBuiltDependencies": [
      "@reown/appkit"
    ]
  },
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check": "biome check . --write",
    "check:ci": "biome ci --formatter-enabled=true --linter-enabled=false .",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "postinstall": "lefthook install",
    "preinstall": "npx only-allow pnpm",
    "test": "turbo run test"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "vite-plugin-node-polyfills": "^0.24.0"
  }
}
