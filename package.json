{
  "name": "idos-sdk-js",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@size-limit/file": "^11.2.0",
    "@size-limit/time": "^11.2.0",
    "lefthook": "1.13.6",
    "size-limit": "^11.1.6",
    "turbo": "^2.7.3"
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "overrides": {
      "web-streams-polyfill": "3.3.3"
    },
    "patchedDependencies": {
      "react-router@7.7.1": "patches/react-router@7.7.1.patch"
    },
    "onlyBuiltDependencies": [
      "@reown/appkit",
      "@rolldown/binding-linux-x64-gnu",
      "@rolldown/binding-linux-x64-musl",
      "@swc/core",
      "@tailwindcss/oxide",
      "blake-hash",
      "bufferutil",
      "es5-ext",
      "esbuild",
      "keccak",
      "lefthook",
      "protobufjs",
      "rolldown",
      "secp256k1",
      "sharp",
      "tiny-secp256k1",
      "usb",
      "utf-8-validate"
    ]
  },
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "pnpm --filter './packages/**' build",
    "check": "biome check . --write",
    "check:ci": "biome ci --formatter-enabled=true --linter-enabled=false .",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "postinstall": "lefthook install",
    "preinstall": "npx only-allow pnpm",
    "size": "size-limit",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "size-limit": [
    {
      "name": "@idos-network/client",
      "path": "packages/client/dist/index.js",
      "limit": "2.0 MB"
    },
    {
      "name": "@idos-network/consumer",
      "path": "packages/consumer/dist/index.mjs",
      "limit": "500 KB"
    },
    {
      "name": "@idos-network/issuer",
      "path": "packages/issuer/dist/index.mjs",
      "limit": "550 KB",
      "running": false
    },
    {
      "name": "@idos-network/credentials",
      "path": "packages/credentials/dist/**/*.mjs",
      "limit": "20 KB"
    },
    {
      "name": "@idos-network/enclave",
      "path": "packages/enclave/dist/**/*.mjs",
      "limit": "20 KB"
    },
    {
      "name": "@idos-network/kwil-infra",
      "path": "packages/kwil-infra/dist/**/*.mjs",
      "limit": "20 KB"
    },
    {
      "name": "@idos-network/utils",
      "path": "packages/utils/dist/**/*.mjs",
      "limit": "20 KB"
    }
  ]
}
