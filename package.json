{
  "name": "idos-sdk-js",
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@size-limit/file": "^11.2.0",
    "@size-limit/time": "^11.2.0",
    "lefthook": "1.12.2",
    "size-limit": "^11.1.6",
    "turbo": "^2.5.5",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "packageManager": "pnpm@10.15.0",
  "pnpm": {
    "overrides": {
      "web-streams-polyfill": "3.3.3"
    },
    "patchedDependencies": {
      "react-router@7.7.1": "patches/react-router@7.7.1.patch"
    },
    "onlyBuiltDependencies": [
      "@reown/appkit",
      "@swc/core",
      "@tailwindcss/oxide",
      "blake-hash",
      "bufferutil",
      "es5-ext",
      "esbuild",
      "keccak",
      "lefthook",
      "protobufjs",
      "rolldown",
      "@rolldown/binding-linux-arm64-gnu",
      "secp256k1",
      "sharp",
      "tiny-secp256k1",
      "usb",
      "utf-8-validate"
    ]
  },
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "pnpm --filter './packages/**' build",
    "typecheck": "turbo run typecheck",
    "check": "biome check . --write",
    "check:ci": "biome ci --formatter-enabled=true --linter-enabled=false .",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "postinstall": "lefthook install",
    "preinstall": "npx only-allow pnpm",
    "size": "size-limit",
    "test": "turbo run test"
  },
  "size-limit": [
    {
      "name": "@idos-network/client",
      "path": "packages/client/dist/index.js",
      "limit": "1.2 MB"
    },
    {
      "name": "@idos-network/consumer",
      "path": "packages/consumer/dist/index.js",
      "limit": "500 KB"
    },
    {
      "name": "@idos-network/issuer",
      "path": "packages/issuer/dist/index.js",
      "limit": "550 KB",
      "running": false
    },
    {
      "name": "@idos-network/utils",
      "path": "packages/utils/dist/**/*.js",
      "limit": "20 KB"
    }
  ]
}
