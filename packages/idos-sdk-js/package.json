{
  "name": "@idos-network/idos-sdk",
  "description": "idOS JavaScript SDK",
  "version": "0.4.1",
  "homepage": "https://idos.network",
  "repository": "https://github.com/idos-network/idos-sdk-js",
  "license": "MIT",
  "type": "module",
  "main": "src/lib/index.ts",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "dotenvx run --convention=nextjs -- tsup --watch",
    "build": "export NODE_ENV=production && dotenvx run --convention=nextjs -- tsup",
    "lint": "biome check --apply ./src",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "release-it": "release-it",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "test:build": "publint --strict"
  },
  "peerDependencies": {
    "ethers": "^6.12",
    "near-api-js": "3.0.4"
  },
  "peerDependenciesMeta": {
    "ethers": {
      "optional": true
    },
    "near-api-js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "catalog:",
    "@idos-network/codecs": "workspace:*",
    "@idos-network/idos-sdk-types": "workspace:*",
    "@near-js/types": "catalog:",
    "@near-wallet-selector/core": "catalog:",
    "@release-it/keep-a-changelog": "catalog:",
    "@vitest/ui": "catalog:",
    "clean-package": "catalog:",
    "dotenv": "catalog:",
    "jsdom": "catalog:",
    "prettier": "catalog:",
    "release-it": "catalog:",
    "tsup": "catalog:",
    "typescript": "^5.2.2",
    "vitest": "^0.31.4"
  },
  "dependencies": {
    "@digitalbazaar/ed25519-signature-2020": "catalog:",
    "@digitalbazaar/ed25519-verification-key-2020": "catalog:",
    "@digitalbazaar/vc": "catalog:",
    "@kwilteam/kwil-js": "catalog:",
    "es-toolkit": "catalog:",
    "bs58": "catalog:",
    "jsonld": "catalog:",
    "jsonld-document-loader": "catalog:",
    "tweetnacl": "catalog:"
  },
  "clean-package": {
    "replace": {
      "main": "dist/index.js",
      "types": "dist/index.d.ts",
      "exports": {
        ".": {
          "types": "./dist/index.d.ts",
          "import": "./dist/index.js"
        },
        "./package.json": "./package.json"
      }
    }
  }
}
