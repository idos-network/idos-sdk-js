{
  "name": "@idos-network/idos-sdk",
  "description": "idOS JavaScript SDK",
  "version": "0.4.1",
  "clean-package": {
    "replace": {
      "main": "dist/index.js",
      "types": "dist/index.d.ts",
      "exports": {
        ".": {
          "types": "./dist/index.d.ts",
          "import": "./dist/index.js"
        },
        "./package.json": "./package.json"
      }
    }
  },
  "dependencies": {
    "@digitalbazaar/ed25519-signature-2020": "^5.2.0",
    "@digitalbazaar/ed25519-verification-key-2020": "^4.1.0",
    "@digitalbazaar/vc": "^6.0.2",
    "@kwilteam/kwil-js": "0.9.0-beta.3",
    "@sanity/comlink": "^3.0.1",
    "es-toolkit": "^1.23.0",
    "jsonld": "^8.3.1",
    "jsonld-document-loader": "^2.0.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.6.4",
    "@idos-network/core": "workspace:*",
    "@near-js/types": "^0.2.1",
    "@near-wallet-selector/core": "8.9.10",
    "@release-it/keep-a-changelog": "^5.0.0",
    "@vitest/ui": "^0.34.6",
    "@wagmi/core": "^2.16.4",
    "clean-package": "^2.2.0",
    "dotenv": "^16.4.5",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "release-it": "^17.0.0",
    "tsup": "8.0.2",
    "typescript": "^5.2.2",
    "vitest": "^0.31.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "homepage": "https://idos.network",
  "license": "MIT",
  "main": "src/lib/index.ts",
  "peerDependencies": {
    "@wagmi/core": "^2.6.5",
    "ethers": "catalog:",
    "near-api-js": "3.0.4"
  },
  "peerDependenciesMeta": {
    "ethers": {
      "optional": true
    },
    "near-api-js": {
      "optional": true
    },
    "@wagmi/core": {
      "optional": true
    }
  },
  "repository": "https://github.com/idos-network/idos-sdk-js",
  "scripts": {
    "build": "export NODE_ENV=production && dotenvx run --convention=nextjs -- tsup",
    "dev": "dotenvx run --convention=nextjs -- tsup --watch",
    "format": "biome format --write .",
    "lint": "biome check --apply ./src",
    "postpack": "clean-package restore",
    "prepack": "clean-package",
    "release-it": "release-it",
    "test": "vitest run",
    "test:build": "publint --strict",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "type": "module"
}
