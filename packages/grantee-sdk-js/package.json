{
  "name": "@idos-network/grantee-sdk-js",
  "description": "idOS Grantee JavaScript SDK",
  "version": "0.0.1",
  "homepage": "https://idos.network",
  "repository": "https://github.com/idos-network/idos-sdk-js",
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsup --watch --config tsup.config.ts",
    "build": "tsup --config tsup.config.ts",
    "lint": "biome check --apply ./src",
    "format": "biome format --write .",
    "release-it": "release-it",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "test:build": "publint --strict"
  },
  "peerDependencies": {
    "ethers": "^6.13.5",
    "near-api-js": "3.0.4"
  },
  "devDependencies": {
    "@idos-network/kwil-actions": "workspace:*",
    "@idos-network/kwil-nep413-signer": "workspace:*",
    "@idos-network/codecs": "workspace:*",
    "@idos-network/cryptography": "workspace:*",
    "@idos-network/idos-sdk-types": "workspace:*",
    "@release-it/keep-a-changelog": "catalog:",
    "clean-package": "catalog:",
    "release-it": "catalog:",
    "tsup": "catalog:",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@kwilteam/kwil-js": "catalog:",
    "tweetnacl": "catalog:"
  },
  "clean-package": {
    "replace": {
      "main": "dist/index.js",
      "types": "dist/index.d.ts",
      "exports": {
        ".": {
          "types": "./dist/index.d.ts",
          "import": "./dist/index.js"
        },
        "./package.json": "./package.json"
      }
    }
  }
}
