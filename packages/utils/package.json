{
  "name": "@idos-network/utils",
  "description": "idOS Utils JavaScript SDK for enclave environments",
  "version": "1.0.0-rc.1.0",
  "clean-package": {
    "remove": [
      "devDependencies.@idos-network/credentials"
    ]
  },
  "dependencies": {
    "@stablelib/base64": "catalog:core",
    "@stablelib/binary": "catalog:core",
    "@stablelib/bytes": "catalog:core",
    "@stablelib/hex": "catalog:core",
    "@stablelib/sha256": "catalog:core",
    "@stablelib/utf8": "catalog:core",
    "es-toolkit": "catalog:core",
    "borsh": "catalog:core",
    "bs58": "catalog:core",
    "scrypt-js": "^3.0.1",
    "tweetnacl": "^1.0.3",
    "web-bip39": "^0.0.3"
  },
  "devDependencies": {
    "@idos-network/credentials": "workspace:*",
    "release-it": "^19.0.2",
    "release-it-pnpm": "^4.6.5",
    "tiny-invariant": "catalog:core",
    "typescript": "catalog:build",
    "tsdown": "catalog:build",
    "@types/chrome": "^0.0.268",
    "@types/node": "^22.15.30"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    "./encryption": {
      "types": "./dist/encryption/index.d.ts",
      "import": "./dist/encryption/index.js"
    },
    "./store": {
      "types": "./dist/store/index.d.ts",
      "import": "./dist/store/index.js"
    },
    "./codecs": {
      "types": "./dist/codecs/index.d.ts",
      "import": "./dist/codecs/index.js"
    },
    "./enclave": {
      "types": "./dist/enclave/index.d.ts",
      "import": "./dist/enclave/index.js"
    },
    "./enclave/local": {
      "types": "./dist/enclave/local.d.ts",
      "import": "./dist/enclave/local.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "homepage": "https://idos.network",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "dist/index.js",
  "peerDependencies": {
    "typescript": "catalog:build",
    "@partisiablockchain/blockchain-api-transaction-client": "^5.149.0",
    "@partisiablockchain/abi-client": "^5.207.0",
    "ethers": "catalog:ethereum"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/idos-network/idos-sdk-js",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown  --watch",
    "publint": "pnpx publint --strict",
    "release-it": "release-it"
  },
  "sideEffects": false,
  "type": "module",
  "types": "./dist/index.d.ts"
}
