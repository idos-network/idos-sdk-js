{
  "name": "@idos-network/issuer",
  "description": "idOS Issuer JavaScript SDK for server environments (ESM only)",
  "version": "1.0.0-rc.2",
  "clean-package": {
    "remove": ["devDependencies.@idos-network/core"]
  },
  "dependencies": {
    "@digitalbazaar/ed25519-signature-2020": "^5.4.0",
    "@digitalbazaar/ed25519-verification-key-2020": "^4.2.0",
    "@digitalbazaar/vc": "^7.0.0",
    "base85": "^3.1.0",
    "es-toolkit": "^1.23.0",
    "jsonld-document-loader": "^2.3.0",
    "tiny-invariant": "^1.3.3",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@idos-network/core": "workspace:*",
    "clean-package": "^2.2.0",
    "release-it": "^19.0.2",
    "release-it-pnpm": "^4.6.5",
    "tsdown": "^0.11.7",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist/**/*", "src/**/*"],
  "homepage": "https://idos.network",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/idos-network/idos-sdk-js",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown  --watch",
    "postpack": "clean-package restore",
    "prepack": "clean-package",
    "publint": "pnpx publint --strict",
    "release-it": "release-it",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "sideEffects": false,
  "type": "module",
  "types": "./dist/index.d.ts"
}
