{
  "name": "@idos-network/issuer-sdk-js",
  "description": "idOS Issuer JavaScript SDK",
  "version": "0.0.1",
  "homepage": "https://idos.network",
  "repository": "https://github.com/idos-network/idos-sdk-js",
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "biome check --apply ./src",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "release-it": "release-it",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "test:build": "publint --strict"
  },
  "devDependencies": {
    "@release-it/keep-a-changelog": "^5.0.0",
    "clean-package": "^2.2.0",
    "release-it": "^17.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.2.2",
    "vitest": "^0.31.4"
  },
  "dependencies": {
    "@idos-network/idos-sdk-types": "workspace:*",
    "@kwilteam/kwil-js": "0.7.1",
    "ethers": "^6.13.3",
    "tiny-invariant": "^1.3.3"
  },
  "clean-package": {
    "replace": {
      "main": "dist/index.js",
      "types": "dist/index.d.ts",
      "exports": {
        ".": {
          "types": "./dist/index.d.ts",
          "import": "./dist/index.js"
        },
        "./package.json": "./package.json"
      }
    }
  }
}
