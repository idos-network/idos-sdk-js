{
  "name": "@idos-network/issuer-sdk-js",
  "description": "idOS Issuer JavaScript SDK",
  "version": "0.0.4",
  "dependencies": {
    "@kwilteam/kwil-js": "0.9.0-beta.3",
    "es-toolkit": "^1.23.0",
    "tiny-invariant": "^1.3.3",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@idos-network/core": "workspace:*",
    "@release-it/keep-a-changelog": "^5.0.0",
    "@types/node": "^22.7.9",
    "release-it": "^17.0.0",
    "tsup": "8.0.2",
    "typescript": "^5.2.2",
    "vitest": "^0.31.4"
  },
  "exports": {
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "files": [
    "dist/**",
    "!dist/**/*.tsbuildinfo",
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.test-d.ts"
  ],
  "homepage": "https://idos.network",
  "license": "MIT",
  "peerDependencies": {
    "near-api-js": "3.0.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "idos-network/idos-sdk-js.git",
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --watch",
    "format": "biome format --write .",
    "lint": "biome check --apply ./src",
    "release-it": "release-it",
    "test": "vitest run",
    "test:build": "pnpx publint --strict",
    "test:watch": "vitest"
  },
  "type": "module"
}
