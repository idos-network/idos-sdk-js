{
  "name": "@idos-network/issuer-sdk-js",
  "description": "idOS Issuer JavaScript SDK",
  "version": "0.0.4",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://idos.network",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idos-network/idos-sdk-js.git"
  },
  "license": "MIT",
  "files": [
    "dist/**",
    "!dist/**/*.tsbuildinfo",
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.test-d.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./create-issuer-config": {
      "types": "./dist/create-issuer-config.d.ts",
      "import": "./dist/create-issuer-config.js"
    },
    "./user": {
      "types": "./dist/user.d.ts",
      "import": "./dist/user.js"
    },
    "./credentials": {
      "types": "./dist/credentials.d.ts",
      "import": "./dist/credentials.js"
    },
    "./grants": {
      "types": "./dist/grants.d.ts",
      "import": "./dist/grants.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --config tsup.config.ts",
    "lint": "biome check --apply ./src",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "release-it": "release-it",
    "test:build": "pnpx publint --strict"
  },
  "devDependencies": {
    "@idos-network/core": "workspace:*",
    "@release-it/keep-a-changelog": "^5.0.0",
    "@types/node": "^22.7.9",
    "release-it": "^17.0.0",
    "tsup": "8.0.2",
    "typescript": "^5.2.2",
    "vitest": "^0.31.4"
  },
  "dependencies": {
    "@kwilteam/kwil-js": "0.7.1",
    "es-toolkit": "^1.23.0",
    "tiny-invariant": "^1.3.3",
    "tweetnacl": "^1.0.3"
  },
  "peerDependencies": {
    "near-api-js": "3.0.4"
  }
}
